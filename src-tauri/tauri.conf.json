{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "cpitor",
  "version": "0.1.2",
  "identifier": "com.cpitor.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "cpitor",
        "width": 1000,
        "decorations": false,
        "height": 700,
        "minHeight": 700,
        "minWidth": 1000,
        "devtools": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "icon": ["icons/icon.png", "icons/icon.ico"],
    "targets": ["deb", "nsis", "dmg"]
  },
  "plugins": {}
}
